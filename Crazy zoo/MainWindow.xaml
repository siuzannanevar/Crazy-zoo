<Window x:Class="Crazy_zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Crazy_zoo.Modules"
        Title="Crazy Zoo"
        Height="1000"
        Width="900">

    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="BlueRoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0D47A1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="15" 
                                BorderBrush="#1976D2" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0">
                <TextBlock Text="Enclosure 1" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <ListBox ItemsSource="{Binding Animals}"
                         SelectedItem="{Binding SelectedAnyAnimal, Mode=TwoWay}"
                         DisplayMemberPath="Name"
                         Height="300"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="5,0,0,0">
                <TextBlock Text="Enclosure 2" FontWeight="Bold" FontSize="14" Margin="0,0,0,5"/>
                <ListBox ItemsSource="{Binding SecondAnimals}"
                         SelectedItem="{Binding SelectedAnyAnimal, Mode=TwoWay}"
                         DisplayMemberPath="Name"
                         Height="300"/>
            </StackPanel>

            <StackPanel Grid.Column="2" Margin="10">
                <TextBlock Text="Animal Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

                <TextBlock FontSize="14" Margin="0,0,0,10"
                           Text="{Binding SelectedAnyAnimal.Name, StringFormat='Name: {0}'}"/>
                <TextBlock FontSize="14" Margin="0,0,0,10"
                           Text="{Binding SelectedAnyAnimal.Species, StringFormat='Species: {0}'}"/>
                <TextBlock FontSize="14" Margin="0,0,0,10"
                           Text="{Binding SelectedAnyAnimal.Age, StringFormat='Age: {0}'}"/>

                <Button Content="Make Sound" Style="{StaticResource BlueRoundedButton}"
                        Height="25" Width="350"
                        Command="{Binding MakeSoundCommand}" />

                <Button Content="Crazy Action" Style="{StaticResource BlueRoundedButton}"
                        Height="25" Width="350"
                        Margin="0,5"
                        Command="{Binding CrazyActionCommand}" />

                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox Width="200" Height="20" Margin="0,0,5,0"
                             Text="{Binding FoodInput, UpdateSourceTrigger=PropertyChanged}" />
                    <Button Content="Feed" Style="{StaticResource BlueRoundedButton}"
                            Height="25" Width="70"
                            Command="{Binding FeedCommand}" />
                </StackPanel>

                <TextBlock Text="Add New Animal" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock Text="Species:"/>
                <TextBox Height="20" Width="200" Margin="0,0,0,5"
                         Text="{Binding NewSpecies, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Name:"/>
                <TextBox Height="20" Width="200" Margin="0,0,0,5"
                         Text="{Binding NewName, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Age:"/>
                <TextBox Height="20" Width="200" Margin="0,0,0,5"
                         Text="{Binding NewAge, UpdateSourceTrigger=PropertyChanged}" />
                <TextBlock Text="Crazy Action Text:"/>
                <TextBox Height="20" Width="200" Margin="0,0,0,5"
                         Text="{Binding NewCrazyText, UpdateSourceTrigger=PropertyChanged}" />

                <Button Content="Add Animal" Margin="0,5"
                        Style="{StaticResource BlueRoundedButton}"                                 
                        Height="25" Width="350"
                        Command="{Binding AddAnimalCommand}" />

                <Button Content="Remove Animal" Margin="0,5"
                        Style="{StaticResource BlueRoundedButton}"
                        Height="25" Width="350"
                        Command="{Binding RemoveAnimalCommand}" />

                <Button Content="Start Night Event" Margin="0,5"
                    Style="{StaticResource BlueRoundedButton}"
                    Height="25" Width="350"
                    Command="{Binding StartNightEventCommand}" />

                <TextBlock Text="Statistics:" FontWeight="Bold" Margin="0,10,0,5"/>
                <TextBlock Text="{Binding Stats}" TextWrapping="Wrap"/>

                <TextBlock Text="Log:" FontWeight="Bold" Margin="0,10,0,0"/>
                <ScrollViewer Height="150" VerticalScrollBarVisibility="Auto" Background="White">
                    <ItemsControl ItemsSource="{Binding Log}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" Margin="3"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Window>
