<Window x:Class="Crazy_zoo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Crazy Zoo" Height="700" Width="800">

    <Window.Background>
        <ImageBrush ImageSource="/Images/background.jpg" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <Style x:Key="BlueRoundedButton" TargetType="Button">
            <Setter Property="Background" Value="#0D47A1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="5,3"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                            CornerRadius="15" 
                            BorderBrush="#1976D2" BorderThickness="1">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#42A5F5"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#1E88E5"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>


    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="AnimalList" DisplayMemberPath="Name" SelectionChanged="AnimalList_SelectionChanged"/>

        <StackPanel Grid.Column="1" Margin="10">
            <TextBlock Text="Animal Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>

            <TextBlock x:Name="AnimalDetails" FontSize="14" Margin="0,0,0,10"/>

            <Button Content="Make Sound" Style="{StaticResource BlueRoundedButton}" Height="25" Width="350" Click="MakeSound_Click" HorizontalAlignment="Left"/>
            <Button Content="Crazy Action" Click="Crazy_Click" Margin="0,5" Style="{StaticResource BlueRoundedButton}" Height="25" Width="350" HorizontalAlignment="Left"/>
            
            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox x:Name="FoodInput" Width="200" Height="20" Margin="0,0,5,0"/>           
                <Button Content="Feed" Click="Feed_Click" Style="{StaticResource BlueRoundedButton}" Height="25" Width="70" Margin="5"/>
            </StackPanel>

            <TextBlock Text="Add New Animal" FontWeight="Bold" Margin="0,10,0,5"/>
            <TextBlock Text="Species:"/>
            <TextBox x:Name="SpeciesBox" Height="20" Width="200" Margin="0,0,0,5" HorizontalAlignment="Left"/>
            <TextBlock Text="Name:"/>
            <TextBox x:Name="NewNameBox" Height="20" Width="200" Margin="0,0,0,5" HorizontalAlignment="Left"/>
            <TextBlock Text="Age:"/>
            <TextBox x:Name="NewAgeBox" Height="20" Width="200" Margin="0,0,0,5" HorizontalAlignment="Left"/>
            <TextBlock Text="Crazy Action Text:"/>
            <TextBox x:Name="NewActionBox" Height="20" Width="200" Margin="0,0,0,5" HorizontalAlignment="Left"/>
            <Button Content="Add Animal" Click="AddAnimal_Click" Margin="0,5" Style="{StaticResource BlueRoundedButton}" Height="25" Width="350"/>
            <Button Content="Remove Animal" Click="RemoveAnimal_Click" Margin="0,5" Style="{StaticResource BlueRoundedButton}" Height="25" Width="350"/>

            <TextBlock Text="Log:" FontWeight="Bold" Margin="0,10,0,0"/>
            <ListBox x:Name="LogBox" Height="150"/>
        </StackPanel>
    </Grid>
</Window>
