<Window x:Class="Crazy_zoo.Modules.AddAnimalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:modules="clr-namespace:Crazy_zoo.Modules"
        Title="Add animal" Height="260" Width="350" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="{x:Static modules:UIStrings.SpeciesLabel}" Grid.Row="0"/>
        <TextBox Grid.Row="0" Margin="100,0,0,5" x:Name="SpeciesBox" Width="200"/>

        <TextBlock Text="{x:Static modules:UIStrings.NameLabel}" Grid.Row="1"/>
        <TextBox Grid.Row="1" Margin="100,0,0,5" x:Name="NameBox" Width="200"/>

        <TextBlock Text="{x:Static modules:UIStrings.AgeLabel}" Grid.Row="2"/>
        <TextBox Grid.Row="2" Margin="100,0,0,5" x:Name="AgeBox" Width="200"/>

        <TextBlock Text="{x:Static modules:UIStrings.CrazyTextLabel}" Grid.Row="3"/>
        <TextBox Grid.Row="3" Margin="100,0,0,5" x:Name="CrazyTextBox" Width="200"/>

        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Width="90" Margin="0,0,10,0" Click="OnCancelClicked">Cancel</Button>
            <Button Width="90" Click="OnAddClicked" Content="{x:Static modules:UIStrings.AddAnimal}"/>
        </StackPanel>
    </Grid>
</Window>
